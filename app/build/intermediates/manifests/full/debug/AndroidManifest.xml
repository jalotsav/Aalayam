<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jalotsav.aalayam"
    android:versionCode="7"
    android:versionName="2.0.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="24" />

    <!-- Get Internet connection status -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Network State Permissions to detect Internet status -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Get External Storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Get Running Task -->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <!-- Get Camera -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Accessing camera hardware -->
    <uses-feature android:name="android.hardware.camera" />

    <!-- Permission to Call -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Creates a custom permission so only this app can receive its messages. -->
    <permission
        android:name="com.jalotsav.aalayam.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.jalotsav.aalayam.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Permission to vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.jalotsav.aalayam.AalayamApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jalotsav.aalayam.Aalayam"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.common.NoInternet_Connection"
            android:label="@string/no_intrnt"
            android:screenOrientation="portrait"
            android:theme="@style/Alym_Red_Light" >
            <intent-filter>
                <action android:name="intntfltrNoIntrntActvt" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.Login_Email"
            android:label="@string/login"
            android:screenOrientation="portrait"
            android:theme="@style/Alym_Blue_Light"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.Login_Pswrd"
            android:label="@string/login"
            android:screenOrientation="portrait"
            android:theme="@style/Alym_Blue_Light"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.navgndrwer.doctor.NavgnDrawer_Main_Doctor"
            android:screenOrientation="portrait"
            android:theme="@style/JalotsavNavDrwrStyleTeal" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.navgndrwer.doctor.NavgnDrwrDoctor"
            android:screenOrientation="portrait"
            android:theme="@style/MikePenzNavDrwrStyleTeal" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.navgndrwer.doctor.NewsDetails"
            android:label="@string/news_dtls"
            android:screenOrientation="portrait"
            android:theme="@style/Alym_OrangeDeep_Light" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.navgndrwer.doctor.MyEquipmentDetails"
            android:label="@string/eqpmnt_dtls"
            android:screenOrientation="portrait"
            android:theme="@style/Alym_Indigo_Light" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.navgndrwer.patient.NavgnDrawer_Main_Patient"
            android:screenOrientation="portrait"
            android:theme="@style/JalotsavNavDrwrStyleBlue"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.common.ImageFullScreen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.navgndrwer.patient.VasScaleAddVasscale"
            android:label="@string/add_vasscale"
            android:screenOrientation="portrait"
            android:theme="@style/Alym_Blue_Light" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.navgndrwer.patient.VasScaleDetails"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.DeviceDefault.Dialog.NoActionBar.MinWidth" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.navgndrwer.patient.PaymentsDetails"
            android:label="@string/pymnt_dtls"
            android:screenOrientation="portrait"
            android:theme="@style/Alym_Blue_Midnight_Light" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.navgndrwer.patient.FullScreenImageViewActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.jalotsav.aalayam.navgndrwer.patient.PatientProfileFrgmnt_CaseDetails"
            android:label="@string/case_dtls"
            android:screenOrientation="portrait"
            android:theme="@style/Alym_Pink_Light" >
        </activity>
        <activity
            android:name="com.dm.zbar.android.scanner.ZBarScannerActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.jalotsav.aalayam" />
            </intent-filter>
        </receiver>

        <service android:name="com.jalotsav.aalayam.GCMIntentService" />
        <service android:name="com.jalotsav.aalayam.service.FireMessagingService" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.jalotsav.aalayam.service.FireInstanceIDService" >
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.jalotsav.aalayam.service.InternetService"
            android:enabled="true" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="32a76e9aa9c047c3ccc50d3b8dda79b2718c24dd" />

        <service
            android:name="com.google.firebase.crash.internal.service.FirebaseCrashReceiverService"
            android:process=":background_crash" />
        <service
            android:name="com.google.firebase.crash.internal.service.FirebaseCrashSenderService"
            android:process=":background_crash" />

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.measurement.UPLOAD" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />
        <!--
 FirebaseMessagingService performs security checks at runtime,
             no need for explicit permissions despite exported="true"
        -->
        <service
            android:name="com.google.firebase.messaging.FirebaseMessagingService"
            android:exported="true" >
            <intent-filter android:priority="-500" >
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.jalotsav.aalayam" />
            </intent-filter>
        </receiver>
        <!--
 Internal (not exported) receiver used by the app to start its own exported services
             without risk of being spoofed.
        -->
        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdInternalReceiver"
            android:exported="false" />
        <!--
 FirebaseInstanceIdService performs security checks at runtime,
             no need for explicit permissions despite exported="true"
        -->
        <service
            android:name="com.google.firebase.iid.FirebaseInstanceIdService"
            android:exported="true" >
            <intent-filter android:priority="-500" >
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.jalotsav.aalayam.firebaseinitprovider"
            android:exported="false"
            android:initOrder="100" />

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>