<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16jdp">

    <TextView
        android:id="@+id/tv_dialog_progress_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plzwait_weare_getting_book"
        android:textSize="@dimen/_14jdp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32jdp"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/tv_dialog_progress_prcntg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5jdp"
        android:textSize="@dimen/_14jdp"
        android:textStyle="bold"
        tools:text="0%" />
</LinearLayout>