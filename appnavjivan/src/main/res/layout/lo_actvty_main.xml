<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActvtyMain">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16jdp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16jdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans_regular"
                android:text="@string/select_language_sml"
                android:textColor="@color/colorPrimaryBlueMidnight"
                android:textSize="@dimen/_20jdp" />

            <ImageView
                android:layout_width="@dimen/_180jdp"
                android:layout_height="@dimen/_180jdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_16jdp"
                android:layout_marginBottom="@dimen/_16jdp"
                android:contentDescription="@string/imgcd_image"
                app:srcCompat="@drawable/ic_medical_history_56dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/appcmptbtn_actvty_main_lang_gujarati"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8jdp"
                    android:layout_weight="1"
                    android:background="@drawable/drwbl_rect_bg_clrprmry_round_corner"
                    android:fontFamily="@font/google_sans_regular"
                    android:paddingLeft="@dimen/_24jdp"
                    android:paddingRight="@dimen/_24jdp"
                    android:text="@string/gujarati_sml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14jdp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/appcmptbtn_actvty_main_lang_english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8jdp"
                    android:layout_weight="1"
                    android:background="@drawable/drwbl_rect_bg_logogreen_round_corner"
                    android:fontFamily="@font/google_sans_regular"
                    android:paddingLeft="@dimen/_24jdp"
                    android:paddingRight="@dimen/_24jdp"
                    android:text="@string/english_sml"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14jdp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>
