<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:paddingLeft="24dp"
    android:paddingTop="24dp"
    android:paddingRight="24dp"
    android:orientation="vertical" >
    
	<!--  Title, Message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
		<TextView
			android:id="@+id/tv_alrtdlg_lollipopdsgn_title"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:textSize="25sp"
	       	android:textColor="@color/black" />
	   
	   	<TextView
	       	android:id="@+id/tv_alrtdlg_lollipopdsgn_msg"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:layout_marginTop="20dp"
	       	android:textSize="16sp"
	       	android:textColor="@color/gray_drk" />
    </LinearLayout>
    <!--  End Title, Message -->
    
    <!-- Positive, Negative Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
	
        <Button
            android:id="@+id/btn_alrtdlg_lollipopdsgn_positive"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:minWidth="64dp"
            android:textAllCaps="true"
            android:background="@drawable/btn_selector"
            android:textColor="@color/blue_dialog_txt"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_alrtdlg_lollipopdsgn_negative"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="64dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/btn_alrtdlg_lollipopdsgn_positive"
            android:textAllCaps="true"
            android:background="@drawable/btn_selector"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>
    <!-- End Positive, Negative Button -->
</RelativeLayout>